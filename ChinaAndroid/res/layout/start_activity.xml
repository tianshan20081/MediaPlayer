<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"  
	android:id="@+id/background_id">
  
	<LinearLayout android:gravity="center"
		android:orientation="vertical" android:id="@+id/player_loading"
		android:layout_centerInParent="true"

		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ImageView android:layout_width="100.0dip"
			android:layout_height="100.0dip" 
			android:src="@drawable/icon" />

		<LinearLayout android:gravity="center"
			android:orientation="horizontal" android:layout_width="wrap_content"
			android:layout_height="100.0dip">
			<ProgressBar android:layout_width="30.0dip"
				android:layout_height="30.0dip" />
			<TextView android:id="@+id/loading_text"
			    android:layout_marginLeft="2.0dip"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="14.6sp" android:text="正在启动中..." />
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
