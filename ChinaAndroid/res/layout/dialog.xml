<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"  
    android:background="@drawable/bg" 
     
   >
    	<LinearLayout
    		android:layout_width="wrap_content"
    	    android:layout_height="wrap_content" 
    	    android:layout_alignParentTop="true"
    	    android:layout_centerHorizontal="true" 
    	    android:orientation="vertical"
    	>
    		 <TextView 
		         android:id="@+id/lay_testview"
		   		 android:layout_width="wrap_content"
		    	 android:layout_height="wrap_content"  
		    	 android:layout_gravity="center_horizontal" 
		    	 android:textSize="24sp" 
		    	 android:layout_marginBottom="20dip" 
		        /> 
		     <LinearLayout
		        android:layout_width="wrap_content"
    	    	android:layout_height="wrap_content" 
    	    	android:orientation="horizontal"
		        >
		        	<Button
		        	   android:layout_width="65dip"
    	    			android:layout_height="65dip" 
    	    			android:id="@+id/zhenfangxing"
    	    			android:text="正方形"
    	    			android:background="@drawable/shape_zhengfangxing"
    	    			android:layout_marginLeft="10dip"
    	    			android:visibility="gone"
		        	></Button>
		        	<Button
		        	   android:layout_width="65dip"
    	    			android:layout_height="65dip" 
    	    			android:id="@+id/banyuanxing"
    	    			android:text="圆角形"
    	    		   android:background="@drawable/shape" 
    	    		   	android:layout_marginLeft="10dip"
    	    		   	android:visibility="gone"
		        	></Button>
		        	<Button
		        		android:layout_marginLeft="10dip"
		        	   android:layout_width="65dip"
    	    			android:layout_height="65dip" 
    	    			android:id="@+id/yuanxing" 
    	    			android:text="圆形"
    	    		    android:background="@drawable/shape_yuanxing" 
    	    		    android:visibility="gone"
		        	></Button>
		        
		        </LinearLayout>
    	</LinearLayout>
      <LinearLayout 
         android:id="@+id/lay"
   		 android:layout_width="wrap_content"
    	 android:layout_height="wrap_content"  
    	 android:layout_gravity="center_horizontal"
    	 android:layout_centerInParent="true"
    	 
        />
  
       <LinearLayout
       	   android:layout_below="@id/lay"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
           android:orientation="horizontal" 
           android:gravity="bottom|center_horizontal"
           android:layout_gravity="bottom|center_horizontal"
           android:layout_marginTop="20.0dip"
           android:layout_marginBottom="20.0dip"  
           android:layout_alignParentBottom="true"
           >

           <Button
               android:id="@+id/sure"
               android:textColor="@color/white"
               android:text="确定"
               android:layout_width="65dip"
               android:layout_height="65dip" 
               android:background="@drawable/shape" 
               android:layout_marginBottom="5.0dip" />

           <Button 
               android:id="@+id/cancel"
               	android:layout_marginLeft="5dip" 
               android:text="取消"
               android:textColor="@color/white"
           		android:layout_width="65dip"
               android:layout_height="65dip"  
              android:background="@drawable/shape"  
              android:layout_marginBottom="5.0dip"/> 
            <Button 
               android:id="@+id/default_id"
               	android:layout_marginLeft="5dip" 
               android:text="默认"
               android:textColor="@color/white"
               android:layout_width="65dip"
               android:layout_height="65dip" 
               android:background="@drawable/shape" 
                  android:layout_marginBottom="5.0dip" />
        
       </LinearLayout>
	
</RelativeLayout>
