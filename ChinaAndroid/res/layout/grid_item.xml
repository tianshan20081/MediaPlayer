<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:id="@+id/ListItemRelativeLayout" 
android:background="#00000000" android:layout_width="wrap_content" 
android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical" 
	    android:orientation="vertical" 
	    android:id="@+id/ListItemLinearLayout" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	   
	     >
	    
	    <ImageView  
	        android:id="@+id/imageview" 
	        android:background="#00000000" 
	        android:layout_width="60dip" 
	        android:layout_height="60dip"   
	       android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal"
	    ></ImageView>
	    <TextView android:textSize="20.0dip" 
	    	android:textColor="@color/white"
	        android:ellipsize="middle" 
	        android:id="@+id/ListItemContent" 
	        android:background="#00000000" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:layout_marginBottom="8.0px"  
	        android:layout_gravity="center_horizontal"
	        android:gravity="center_horizontal"
	        />
    </LinearLayout>
</RelativeLayout>