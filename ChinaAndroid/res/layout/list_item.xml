<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout android:id="@+id/ListItemRelativeLayout" 
android:background="#00000000" android:layout_width="fill_parent" 
android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" 
  >
    <LinearLayout 
	    android:orientation="horizontal" 
	    android:id="@+id/ListItemLinearLayout" 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:layout_marginLeft="12.0dip"  
	     > 
	    <ImageView 
	        android:layout_marginTop="5dip"
	        android:id="@+id/imageview" 
	        android:background="#00000000" 
	        android:layout_width="60dip" 
	        android:layout_height="60dip"  
	       
	    ></ImageView> 
	    <TextView  
	    	android:layout_marginLeft="10dip"
	      	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
	    	android:id="@+id/ListItemContent"
	    	android:textColor="@color/white"
	    	android:textSize="20dip"  
	    	android:layout_toRightOf="@id/imageview"
	     ></TextView>
	     
	        
	  </LinearLayout>
	  <ImageView  
	        android:layout_alignParentRight="true"
	        android:layout_gravity="center_vertical"
	        android:layout_centerVertical="true"
	        android:id="@+id/imageview" 
	        android:background="@drawable/ico_playlist_fold" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"  
	    ></ImageView> 
	  
</RelativeLayout>