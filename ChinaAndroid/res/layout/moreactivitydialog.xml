<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/popid"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:gravity="bottom"
   
> 
    <LinearLayout android:layout_width="fill_parent"
  		 
		android:layout_height="wrap_content" android:orientation="vertical"
		android:gravity="center" android:layout_alignParentBottom="true">
		<FrameLayout android:layout_width="fill_parent"
		  android:id="@+id/more_bg_linear"
			android:layout_height="wrap_content" 
			android:layout_gravity="center_horizontal" android:gravity="center"
			android:layout_marginTop="5dip"> 
		<LinearLayout android:layout_width="fill_parent" 
			android:layout_height="wrap_content" android:orientation="horizontal"
			  android:gravity="center"
			 > 
			 <RelativeLayout  
			    android:id="@+id/setmenu"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"  
				android:layout_marginRight="15.0dip"
				android:layout_gravity="center_horizontal" 
				android:gravity="center">

				<Button android:id="@+id/settingbutton_meun" 
					android:gravity="center_horizontal"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/action_bg_setting" /> 
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="设置" 
					android:layout_centerHorizontal="true"
					android:layout_below="@id/settingbutton_meun"
				></TextView>
			</RelativeLayout>
			
			<RelativeLayout   
			    android:id="@+id/set"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"  
				android:layout_marginRight="15.0dip"
				android:layout_gravity="center_horizontal" 
				android:gravity="center">

				<Button android:id="@+id/settingbutton" 
					android:gravity="center_horizontal"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/menu_about" /> 
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="关于" 
					android:layout_centerHorizontal="true"
					android:layout_below="@id/settingbutton"
				></TextView>
			</RelativeLayout>
			
			<RelativeLayout  
				android:id="@+id/play_net_uri"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"  
				android:layout_gravity="center_horizontal" 
				android:gravity="center"
				android:layout_marginRight="15.0dip"
				>

				<Button android:id="@+id/playliumeiti" 
			    	android:gravity="center_horizontal" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/action_stream" /> 
			   <TextView
			   	android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:text="流媒体" 
					android:layout_centerHorizontal="true"
					android:layout_below="@id/playliumeiti"
				></TextView>
			</RelativeLayout>
			
			<RelativeLayout  
				android:id="@+id/feedback"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"  
				android:layout_gravity="center_horizontal" 
				android:gravity="center"
				android:layout_marginRight="15.0dip"
				>

				<Button android:id="@+id/feedbackButton" 
			    	android:gravity="center_horizontal" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/fankui_bg" /> 
			   <TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="反馈" 
					android:gravity="center"
					android:layout_centerHorizontal="true"
					android:layout_below="@id/feedbackButton"
				></TextView>
			</RelativeLayout>
			
				<RelativeLayout  
				android:id="@+id/help_id"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"  
				android:layout_gravity="center_horizontal" 
				android:gravity="center"
				>

				<Button android:id="@+id/help_button" 
			    	android:gravity="center_horizontal" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:background="@drawable/action_help" /> 
			   <TextView
			   
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="帮助" 
					android:gravity="center"
					android:layout_centerHorizontal="true"
					android:layout_below="@id/help_button"
				></TextView>
			</RelativeLayout>
			</LinearLayout>
		</FrameLayout>
 	</LinearLayout>
  </RelativeLayout>